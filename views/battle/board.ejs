<div id="shogi">
  <div v-if="isCheck.isOwn" class="checkedOwn"></div>
  <div v-if="isCheck.isEnemy" class="checkedEnemy"></div>
  <div class="top">
    <div v-if="game.isSente" class="gote hold_space">
      <% for (var i = 1200; i <= 1206; i=i+1) { %>
        <div v-on:click="onSelect($event)" class="square hold" id="<%= i %>">
          <div></div>
          <div v-bind:class="board[<%= i %>].komaClass"></div>
          <span v-if="board[<%= i %>].komaClass">{{board[<%= i %>].koma}}</span> 
        </div>
      <% } %>
    </div>
    <div v-if="game.isGote" class="sente hold_space">
      <% for (var i = 1100; i <= 1106; i=i+1) { %>
        <div v-on:click="onSelect($event)" class="square hold" id="<%= i %>">
          <div></div>
          <div v-bind:class="board[<%= i %>].komaClass"></div>
          <span v-if="board[<%= i %>].komaClass">{{board[<%= i %>].koma}}</span> 
        </div>
      <% } %>
    </div>
  </div>
  <div class="board">
    <img src="/images/parts/outBoard.png" width="100%" height="100%">
    <div v-if="game.isSente" class="sente">
      <% for (var i = 1; i <= 9; i=i+1) { %>
        <% for (var j = 90; j >= 10; j=j-10) { %>
          <div v-on:click="onSelect($event)" class="square" id="<%= i+j %>">
            <div></div>
            <div v-bind:class="board[<%= i+j %>].komaClass"></div>
          </div>
        <% } %>
      <% } %>
    </div>
    <div v-if="game.isGote" class="gote">
      <% for (var i = 9; i >= 1; i=i-1) { %>
        <% for (var j = 10; j <= 90; j=j+10) { %>
          <div v-on:click="onSelect($event)" class="square" id="<%= i+j %>">
            <div></div>
            <div v-bind:class="board[<%= i+j %>].komaClass"></div>
          </div>
        <% } %>
      <% } %>
    </div>
  </div>
  <div class="bottom">
    <div v-if="game.isSente" class="sente hold_space">
      <% for (var i = 1100; i <= 1106; i=i+1) { %>
        <div v-on:click="onSelect($event)" class="square hold" id="<%= i %>">
          <div></div>
          <div v-bind:class="board[<%= i %>].komaClass"></div>
          <span v-if="board[<%= i %>].komaClass">{{board[<%= i %>].koma}}</span>  
        </div>
      <% } %>
    </div>
    <div v-if="game.isGote" class="gote hold_space">
      <% for (var i = 1200; i <= 1206; i=i+1) { %>
        <div v-on:click="onSelect($event)" class="square hold" id="<%= i %>">
          <div></div>
          <div v-bind:class="board[<%= i %>].komaClass"></div>
          <span v-if="board[<%= i %>].komaClass">{{board[<%= i %>].koma}}</span> 
        </div>
      <% } %>
    </div>
  </div>
</div>